FROM python:3.11-slim

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Install dependencies from pyproject.toml (not as installable package)
COPY deploy/local/pyproject.toml .
RUN uv pip install --system --prerelease allow -r pyproject.toml

# Copy agent code
COPY agents/ ./agents/

# Copy FastAPI app
COPY deploy/local/app.py .

EXPOSE {{ local.port }}

CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "{{ local.port }}"]
