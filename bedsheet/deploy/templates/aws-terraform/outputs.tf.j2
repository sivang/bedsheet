# {{ config.name }} - Terraform Outputs
# Generated by: bedsheet generate --target aws-terraform

{% if agent.is_supervisor and agent.collaborators %}
# Supervisor Agent
output "supervisor_agent_id" {
  description = "ID of the supervisor agent"
  value       = aws_bedrockagent_agent.supervisor.agent_id
}

output "supervisor_alias_arn" {
  description = "ARN of the supervisor agent alias"
  value       = aws_bedrockagent_agent_alias.supervisor.agent_alias_arn
}

output "supervisor_alias_id" {
  description = "ID of the supervisor agent alias"
  value       = aws_bedrockagent_agent_alias.supervisor.agent_alias_id
}

# Collaborator Agents
{% for collaborator in agent.collaborators %}
output "{{ collaborator.name | lower }}_agent_id" {
  description = "ID of the {{ collaborator.name }} agent"
  value       = aws_bedrockagent_agent.{{ collaborator.name | lower }}.agent_id
}

output "{{ collaborator.name | lower }}_alias_arn" {
  description = "ARN of the {{ collaborator.name }} agent alias"
  value       = aws_bedrockagent_agent_alias.{{ collaborator.name | lower }}.agent_alias_arn
}
{% endfor %}

{% else %}
# Single Agent
output "agent_id" {
  description = "ID of the agent"
  value       = aws_bedrockagent_agent.main.agent_id
}

output "alias_arn" {
  description = "ARN of the agent alias"
  value       = aws_bedrockagent_agent_alias.main.agent_alias_arn
}

output "alias_id" {
  description = "ID of the agent alias"
  value       = aws_bedrockagent_agent_alias.main.agent_alias_id
}
{% endif %}
