# {{ config.name }} - AWS CDK Project
# Generated by: bedsheet generate --target aws

[project]
name = "{{ config.name }}"
version = "0.1.0"
description = "{{ config.description or 'A Bedsheet agent deployment on AWS' }}"
requires-python = ">=3.11"
dependencies = [
    # AWS CDK
    "aws-cdk-lib>=2.100.0",
    "constructs>=10.0.0",
    # Bedsheet (for local testing)
    "bedsheet>=0.4.0",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
