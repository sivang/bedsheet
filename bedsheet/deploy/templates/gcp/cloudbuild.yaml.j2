# {{ config.name }} - Cloud Build CI/CD
# Generated by: bedsheet deploy --target gcp

steps:
  # Build container
  - name: 'gcr.io/cloud-builders/docker'
    args:
      - 'build'
      - '-t'
      - 'gcr.io/$PROJECT_ID/{{ project_name }}:$COMMIT_SHA'
      - '.'

  # Push to Container Registry
  - name: 'gcr.io/cloud-builders/docker'
    args:
      - 'push'
      - 'gcr.io/$PROJECT_ID/{{ project_name }}:$COMMIT_SHA'

  # Deploy to Cloud Run
  - name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
    entrypoint: gcloud
    args:
      - 'run'
      - 'deploy'
      - '{{ project_name }}'
      - '--image'
      - 'gcr.io/$PROJECT_ID/{{ project_name }}:$COMMIT_SHA'
      - '--region'
      - '{{ gcp.region or "us-central1" }}'
      - '--platform'
      - 'managed'
      - '--allow-unauthenticated'
      {% if gcp.cloud_run_memory %}
      - '--memory'
      - '{{ gcp.cloud_run_memory }}'
      {% endif %}

images:
  - 'gcr.io/$PROJECT_ID/{{ project_name }}:$COMMIT_SHA'

timeout: '1200s'
