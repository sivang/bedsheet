# {{ config.name }} - Terraform Variables
# Generated by: bedsheet deploy --target gcp

variable "project_id" {
  description = "GCP Project ID"
  type        = string
  default     = "{{ gcp.project or 'your-project-id' }}"
}

variable "region" {
  description = "GCP Region for Cloud Run deployment"
  type        = string
  default     = "{{ gcp.region or 'us-central1' }}"
}

variable "allow_unauthenticated" {
  description = "Allow unauthenticated access to the Cloud Run service"
  type        = bool
  default     = false
}

variable "image_tag" {
  description = "Container image tag to deploy"
  type        = string
  default     = "latest"
}
