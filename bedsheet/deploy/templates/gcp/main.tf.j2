# {{ config.name }} - Terraform Configuration for GCP
# Generated by: bedsheet deploy --target gcp
#
# This creates:
# - Cloud Run service for the agent
# - IAM bindings for invocation
# - Vertex AI access for Gemini models

terraform {
  required_version = ">= 1.0.0"

  required_providers {
    google = {
      source  = "hashicorp/google"
      version = ">= 5.0.0"
    }
  }
}

provider "google" {
  project = var.project_id
  region  = var.region
}

# NOTE: APIs are enabled by `make init` using gcloud CLI before Terraform runs.
# This avoids ADC permission issues with google_project_service resources.

# Artifact Registry repository for container images
# Note: GCP resource names can't have underscores, so we replace with hyphens
resource "google_artifact_registry_repository" "agent_repo" {
  location      = var.region
  repository_id = "{{ project_name | replace('_', '-') }}-repo"
  description   = "Docker repository for {{ project_name }} agent"
  format        = "DOCKER"
}

# Service account for the agent (created first so Cloud Run can reference it)
# Note: GCP service account IDs can't have underscores, so we replace with hyphens
resource "google_service_account" "agent" {
  account_id   = "{{ project_name | replace('_', '-') }}-sa"
  display_name = "{{ config.name }} Agent Service Account"
}

# Grant service account access to Vertex AI
resource "google_project_iam_member" "agent_vertex_ai" {
  project = var.project_id
  role    = "roles/aiplatform.user"
  member  = "serviceAccount:${google_service_account.agent.email}"
}

# Cloud Run service
resource "google_cloud_run_v2_service" "agent" {
  name     = "{{ project_name | replace('_', '-') }}"
  location = var.region

  template {
    service_account = google_service_account.agent.email

    containers {
      image = "${var.region}-docker.pkg.dev/${var.project_id}/${google_artifact_registry_repository.agent_repo.repository_id}/{{ project_name | replace('_', '-') }}:latest"

      ports {
        container_port = 8080
      }

      resources {
        limits = {
          cpu    = "1"
          memory = "{{ gcp.cloud_run_memory or '512Mi' }}"
        }
      }

      # Environment variables for Vertex AI (ADC is automatic)
      env {
        name  = "GOOGLE_CLOUD_PROJECT"
        value = var.project_id
      }

      env {
        name  = "GOOGLE_CLOUD_LOCATION"
        value = var.region
      }
    }

    scaling {
      min_instance_count = 0
      max_instance_count = 10
    }
  }

  traffic {
    percent = 100
    type    = "TRAFFIC_TARGET_ALLOCATION_TYPE_LATEST"
  }

  depends_on = [google_project_iam_member.agent_vertex_ai]
}

# Allow unauthenticated access (optional - remove for private agents)
resource "google_cloud_run_v2_service_iam_member" "public" {
  count = var.allow_unauthenticated ? 1 : 0

  project  = var.project_id
  location = var.region
  name     = google_cloud_run_v2_service.agent.name
  role     = "roles/run.invoker"
  member   = "allUsers"
}

# Log-based metric for agent invocations
resource "google_logging_metric" "agent_invocations" {
  name        = "{{ project_name | replace('_', '-') }}-invocations"
  description = "Count of agent invocations"
  filter      = "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"{{ project_name | replace('_', '-') }}\" AND textPayload=~\"invoke\""

  metric_descriptor {
    metric_kind = "DELTA"
    value_type  = "INT64"
  }
}
