# {{ config.name }} - Terraform Variables
# Generated by: bedsheet deploy --target gcp
#
# Copy this file to terraform.tfvars and fill in your values:
#   cp terraform.tfvars.example terraform.tfvars
#
# Or run `make setup` for guided configuration.

# =============================================================================
# REQUIRED
# =============================================================================

# Your GCP project ID (run `gcloud projects list` to see your projects)
project_id = "{{ gcp.project or 'your-project-id' }}"

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# GCP region for deployment (see: https://cloud.google.com/about/locations)
region = "{{ gcp.region or 'europe-west1' }}"

# Deployment environment (affects resource naming and labels)
environment = "dev"  # Options: dev, staging, prod

# Container image tag (usually "latest" or a git commit SHA)
image_tag = "latest"

# =============================================================================
# CLOUD RUN CONFIGURATION
# =============================================================================

# CPU limit (e.g., "1", "2", "4")
cpu_limit = "1"

# Memory limit (e.g., "512Mi", "1Gi", "2Gi")
memory_limit = "{{ gcp.cloud_run_memory or '512Mi' }}"

# Instance scaling
min_instances = 0   # 0 = scale to zero (cost optimization)
max_instances = 10  # Maximum concurrent instances

# Request timeout in seconds (LLM calls can be slow)
request_timeout_seconds = 300  # 5 minutes

# Log level for the application
log_level = "INFO"  # Options: DEBUG, INFO, WARNING, ERROR

# =============================================================================
# SECURITY & ACCESS CONTROL
# =============================================================================

# Allow public (unauthenticated) access?
# Set to true for public APIs, false for private/internal use
allow_unauthenticated = false

# Authorized invokers (when allow_unauthenticated = false)
# List of IAM members who can invoke the service
# Examples:
#   - "user:alice@example.com"
#   - "serviceAccount:my-app@my-project.iam.gserviceaccount.com"
#   - "group:developers@example.com"
#   - "domain:example.com"
authorized_invokers = [
  # "user:your-email@example.com",
]
