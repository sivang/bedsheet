# Terraform Outputs for AgentCore Deployment
# Generated by Bedsheet v0.4.7

output "runtime_arn" {
  description = "ARN of the AgentCore Runtime"
  value       = aws_bedrockagentcore_runtime.main.arn
}

output "runtime_endpoint" {
  description = "Endpoint URL for the AgentCore Runtime"
  value       = aws_bedrockagentcore_runtime.main.endpoint
}

output "runtime_name" {
  description = "Name of the AgentCore Runtime"
  value       = aws_bedrockagentcore_runtime.main.runtime_name
}

output "ecr_repository_url" {
  description = "ECR repository URL for the Runtime container"
  value       = aws_ecr_repository.runtime.repository_url
}

output "artifacts_bucket" {
  description = "S3 bucket for runtime artifacts"
  value       = aws_s3_bucket.artifacts.bucket
}

{% if agent.tools %}
output "gateway_arn" {
  description = "ARN of the AgentCore Gateway"
  value       = aws_bedrockagentcore_gateway.main.arn
}

output "gateway_endpoint" {
  description = "Endpoint URL for the AgentCore Gateway"
  value       = aws_bedrockagentcore_gateway.main.endpoint
}

output "lambda_function_arn" {
  description = "ARN of the Lambda function for tools"
  value       = aws_lambda_function.tools.arn
}
{% endif %}

{% if agent.collaborators %}
output "collaborator_arns" {
  description = "ARNs of collaborator agent runtimes"
  value = {
    {% for collaborator in agent.collaborators %}
    "{{ collaborator.name }}" = aws_bedrockagentcore_runtime.collaborator_{{ collaborator.name | lower | replace(' ', '_') }}.arn
    {% endfor %}
  }
}
{% endif %}

output "aws_region" {
  description = "AWS region of deployment"
  value       = var.aws_region
}

output "project_name" {
  description = "Project name"
  value       = var.project_name
}

output "environment" {
  description = "Deployment environment (Terraform workspace)"
  value       = terraform.workspace
}
