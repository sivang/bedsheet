# Terraform Variables for AgentCore Deployment
# Generated by Bedsheet v0.4.7

variable "project_name" {
  description = "Project name for resource naming"
  type        = string
  default     = "{{ project_name }}"
}

variable "aws_region" {
  description = "AWS region for deployment"
  type        = string
  default     = "{{ agentcore.region }}"
}

variable "runtime_memory" {
  description = "Memory allocation for AgentCore Runtime (MB)"
  type        = number
  default     = {{ agentcore.runtime_memory }}

  validation {
    condition     = var.runtime_memory >= 512 && var.runtime_memory <= 8192
    error_message = "Runtime memory must be between 512 and 8192 MB."
  }
}

variable "runtime_vcpu" {
  description = "vCPU allocation for AgentCore Runtime"
  type        = number
  default     = {{ agentcore.runtime_vcpu }}

  validation {
    condition     = var.runtime_vcpu >= 0.25 && var.runtime_vcpu <= 4
    error_message = "Runtime vCPU must be between 0.25 and 4."
  }
}

variable "lambda_memory" {
  description = "Memory allocation for Lambda tool handlers (MB)"
  type        = number
  default     = {{ agentcore.lambda_memory }}

  validation {
    condition     = var.lambda_memory >= 128 && var.lambda_memory <= 10240
    error_message = "Lambda memory must be between 128 and 10240 MB."
  }
}

variable "bedrock_model" {
  description = "Bedrock model ID for the agent"
  type        = string
  default     = "{{ agentcore.bedrock_model }}"
}
